<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_ngay"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_ngay_top_right"
        android:fontFamily="@font/belgrano"
        android:gravity="center"
        android:padding="7dp"
        android:text="Chọn tháng"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnT1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T1"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T2"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T3"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T4"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T5"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T6"
                android:textColor="@color/bac"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/btnTatCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Tất cả"
                android:background="@drawable/border_linerlayout"
                android:textColor="@color/link"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnT7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T7"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T8"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T9"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T10"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T11"
                android:textColor="@color/bac"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/btnT12"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius50"
                android:fontFamily="@font/basic"
                android:gravity="center"
                android:text="T12"
                android:textColor="@color/bac"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btn_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_ngay_baocao_close"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Đóng"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_dong_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_ngay_baocao_dongy"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Đồng ý"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>