<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_16"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/xanh"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_titel_16"
        android:text="Đơn Vị Tính"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/xanh"
            android:text="Đơn vị quy đổi"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/spnTenDonViTinh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:background="@drawable/bg_white_spn"
                android:textColor="@color/slate" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/xanh"
            android:text="Giá"></TextView>

        <EditText
            android:id="@+id/tedtGiaDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_edittext"
            android:layout_marginTop="5dp"
            android:padding="12dp"
            android:textColor="@color/bac"
            android:inputType="number"
            ></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btnhuyDiaLogDVT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_10"
                android:alpha="0.4"
                android:text="Hủy bỏ"></Button>
            <Button
                android:id="@+id/btnthemDiaLogDVT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/xanh"
                android:backgroundTint="@color/vang"
                android:background="@drawable/bg_button_16"
                android:text="Thêm"></Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>