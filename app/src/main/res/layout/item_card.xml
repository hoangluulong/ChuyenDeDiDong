<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/card_background"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/imgsanpham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvtensanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgsanpham"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgminus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgsanpham"
        app:layout_constraintStart_toEndOf="@+id/imgsanpham"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/tvsoluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="1"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgminus"
        app:layout_constraintStart_toEndOf="@+id/imgminus"
        app:layout_constraintTop_toTopOf="@+id/imgminus" />

    <ImageView
        android:id="@+id/imgplus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgminus"
        app:layout_constraintStart_toEndOf="@+id/tvsoluong"
        app:layout_constraintTop_toTopOf="@+id/imgminus"
        app:srcCompat="@drawable/plus" />

    <TextView
        android:id="@+id/tvgiasanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="#373b54"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvtensanpham"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvtensanpham" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="$"
        android:textColor="#ff3d00"
        app:layout_constraintBottom_toBottomOf="@+id/tvgiasanpham"
        app:layout_constraintEnd_toStartOf="@+id/tvgiasanpham"
        app:layout_constraintTop_toTopOf="@+id/tvgiasanpham" />

    <TextView
        android:id="@+id/Tong1SanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgplus"
        app:layout_constraintEnd_toEndOf="@+id/tvgiasanpham"
        app:layout_constraintTop_toTopOf="@+id/imgplus" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="$"
        android:textColor="#ff3d00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Tong1SanPham"
        app:layout_constraintEnd_toStartOf="@+id/Tong1SanPham"
        app:layout_constraintTop_toTopOf="@+id/Tong1SanPham" />

    <TextView
        android:id="@+id/tvLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:text="Loáº¡i"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvsoluong"
        app:layout_constraintStart_toEndOf="@+id/imgsanpham"
        app:layout_constraintTop_toBottomOf="@+id/tvtensanpham" />

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/icons8x"
        app:layout_constraintBottom_toTopOf="@+id/Tong1SanPham"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgiasanpham" />
</androidx.constraintlayout.widget.ConstraintLayout>