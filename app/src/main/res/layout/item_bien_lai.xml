<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="1"
        android:textColor="#8C8C8C"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="x"
        android:textSize="15sp"
        android:textColor="#8C8C8C"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_soluong"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tensanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trà sữa bạc hà"
        android:layout_marginBottom="1dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:textColor="#8C8C8C"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_x"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_giatien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="457357395438"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#8C8C8C"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>