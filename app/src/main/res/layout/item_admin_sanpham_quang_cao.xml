<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_linerlayout_v2"
    android:backgroundTint="@color/xanh_nhe"
    android:layout_margin="10dp"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textSize="20dp"
        android:fontFamily="@font/alike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_id_sp_quan_cao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17dp"
        android:textStyle="normal|italic|bold"
        android:textColor="@color/CPP"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cửa hàng: "
        android:textSize="20dp"
        android:fontFamily="@font/alike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/tv_ten_cua_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cà phê Trung Nguyên"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="normal|italic|bold"
        android:textColor="@color/xanh"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_sp_quan_cao" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textSize="20dp"
        android:fontFamily="@font/alike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/tv_so_dien_thoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0981986059"
        android:layout_marginStart="20dp"
        android:textColor="@color/xanh"
        android:textSize="20dp"
        android:textStyle="normal|italic|bold"
        app:layout_constraintStart_toEndOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_cua_hang" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/link"
        app:layout_constraintTop_toBottomOf="@+id/tv_so_dien_thoai"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/alike"
        android:text="Tên sản phẩm:"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/image_sp"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/tv_ten_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Caffee sữa nguỵehfjsd dskhfsd"
        android:textColor="@color/CPP"
        android:textSize="20dp"
        android:textStyle="normal|italic|bold"
        app:layout_constraintStart_toEndOf="@+id/image_sp"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <ImageView
        android:id="@+id/image_sp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/bia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/alike"
        android:text="Số lượng:"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/image_sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_san_pham" />

    <TextView
        android:id="@+id/tv_so_luong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="20"
        android:textColor="@color/xanh"
        android:textStyle="normal|italic|bold"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_san_pham" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/link"
        app:layout_constraintTop_toBottomOf="@+id/tv_so_luong"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/btn_duyet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_linerlayout_v2"
        android:fontFamily="@font/alike_angular"
        android:padding="6dp"
        android:text="Duyệt"
        android:textColor="@color/Python"
        android:textSize="20sp"
        android:textStyle="italic|normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/btn_huy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_cho_shipper"
        android:fontFamily="@font/alike_angular"
        android:padding="6dp"
        android:text="Hủy"
        android:textColor="@color/CPP"
        android:textSize="20sp"
        android:textStyle="italic|normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_duyet"
        app:layout_constraintTop_toBottomOf="@+id/tv_so_luong" />

</androidx.constraintlayout.widget.ConstraintLayout>