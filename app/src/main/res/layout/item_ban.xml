<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayouts"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"

    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/cardview_ban">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@color/xanh">
            <TextView
                android:id="@+id/tvtenphucvu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:fontFamily="@font/baloo"
                android:text="Xuân Trường"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteY="2dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="20dp"
                android:src="@drawable/icons8bacham"
                tools:layout_editor_absoluteX="150dp">

            </ImageView>
        </LinearLayout>
            <TextView
                android:id="@+id/tvtenban"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:elevation="20dp"
                android:fontFamily="@font/baloo"
                android:text="Tên Bàn"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvngaygio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:fontFamily="@font/baloo"
                android:text="1h30p"
                android:textSize="16sp"

                tools:layout_editor_absoluteY="94dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvtrangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/baloo"
                android:text="TextView"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="91dp" />

        </LinearLayout>





        </LinearLayout>


<!--    </LinearLayout>-->


</androidx.cardview.widget.CardView>