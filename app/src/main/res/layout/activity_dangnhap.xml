<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="DangNhapActivity"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/shipper"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edt_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boder"
            android:drawableLeft="@drawable/iconuser"
            android:hint="Tên đăng nhập"
            android:padding="20px"
            ></EditText>

        <EditText
            android:id="@+id/edt_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boder"
            android:drawableLeft="@drawable/iconpass"
            android:hint="Mật khẩu"
            android:padding="20px"
            android:layout_margin="20px"
            android:password="true"></EditText>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lưu tài khoản đăng nhập"
            android:id="@+id/saveUser"></CheckBox>
        <Button
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:background="@drawable/button"
         android:id="@+id/btn_dangnhap"></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quên mật khẩu?"
            android:gravity="center"
            android:id="@+id/tv_quenmk"
            android:textStyle="bold"
            android:paddingTop="20dp"></TextView>

        <Button
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng kí tài khoản mới"
            android:background="@drawable/button"
            android:id="@+id/btn_dangki"
            android:layout_margin="20dp"></Button>
    </LinearLayout>


</RelativeLayout>