<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <!-- -->
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:cardCornerRadius="20dp"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vang"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/imgsanpham"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:background="@drawable/nocard"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="5dp"
                                        android:text="Tên: "
                                        android:textSize="16sp">

                                    </TextView>

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:id="@+id/tvtensanphamtrong"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Bánh Plan"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="5dp"
                                        android:text="Loại:"
                                        android:textSize="16sp">

                                    </TextView>

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:id="@+id/tvloaisanphamtrong"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|right"
                                        android:text="Bánh"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="5dp"
                                        android:text="Giá:"
                                        android:textSize="16sp">

                                    </TextView>

                                    <TextView
                                        android:fontFamily="@font/alike_angular"
                                        android:id="@+id/tvgiasanphamtrong"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|bottom"
                                        android:text="30000"

                                        android:textSize="16sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/alike_angular"
                                    android:id="@+id/tvsoluongsanphamtrong"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="X4"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:fontFamily="@font/alike_angular"
                                    android:id="@+id/tonggiasanphamtrong"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="30000000"
                                    android:textSize="16sp"></TextView>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/alike_angular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingRight="5dp"
                                android:text="Ghi chú:"
                                android:textSize="16sp">

                            </TextView>

                            <TextView
                                android:fontFamily="@font/alike_angular"
                                android:id="@+id/tvghichu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:gravity="center|left"
                                android:text="không đường"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvtensanpham"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@android:color/darker_gray"
                    android:fontFamily="@font/alike_angular"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Bánh Plan"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alike_angular"
                    android:text="X4"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvgiasanphamngoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:fontFamily="@font/alike_angular"
                    android:paddingRight="10dp"
                    android:text="100000"
                    android:textSize="20sp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </com.ramotion.foldingcell.FoldingCell>


</LinearLayout>